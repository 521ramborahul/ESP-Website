$j = $.noConflict();
$j(document).ready(function() {
  if (esp_user.cur_admin == "1") {
    $j(".admin").removeClass("admin_hidden");
  }

  if (esp_user.cur_username != null) {
    $j(".not_logged_in").addClass("not_logged_in_hidden");
    $j(".logged_in").removeClass("logged_in_hidden");
  }
});
</script>
